<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_lightblue_editbox"
    android:orientation="vertical"
    android:padding="@dimen/standard">

    <TextView
        android:id="@+id/idCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/typeCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/nameCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/depositsCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/withdrawalsCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/balanceCardTV"
        style="@style/title_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>